.block
  width 100%
  position relative
  display block
  padding 15px
  user-select none

  &__close
    position absolute
    top 5px
    right 5px
    cursor pointer
    font-size 16px
    line-height 1

  &__text
    font-size 16px

  &_state
    &_red
      background-color rgba(#F25F5C, .3)

    &_green
      background-color rgba(#70C1B3, .3)

    &_selected
      &:after
        content ''
        position absolute
        height 100%
        width 5px
        background-color rgba(#247BA0)
        top 0
        left 0